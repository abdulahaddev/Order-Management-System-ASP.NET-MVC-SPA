@model EvidenceMVC.Models.Customer
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col">
        @using (Ajax.BeginForm("Create", "Customers", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg-CreateCustomer" }, new { id = "CustomerAddForm", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken();
            <h2>Add New Customer</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row row mb-2">
                @Html.LabelFor(x => x.CustomerName, htmlAttributes: new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.EditorFor(x => x.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.CustomerName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row row mb-2">
                @Html.LabelFor(x => x.CustomerAddress, htmlAttributes: new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.EditorFor(x => x.CustomerAddress, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.CustomerAddress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                    <div id="msg-CreateCustomer"></div>
                </div>
            </div>
        }
    </div>
</div>