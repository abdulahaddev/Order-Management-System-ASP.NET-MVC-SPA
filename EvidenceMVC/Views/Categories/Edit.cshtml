@model EvidenceMVC.Models.Category
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col">
        @using (Ajax.BeginForm("Edit", "Categories", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg-EditCategory"}, new { id = "CategoriesEditForm", enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x=>x.CategoryId);
            @Html.AntiForgeryToken();
            <h2 class="display-4">Update Category</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row row mb-2">
                @Html.LabelFor(x => x.CategoryName, htmlAttributes: new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.EditorFor(x => x.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                    <div id="msg-EditCategory"></div>
                </div>
            </div>
        }
    </div>
</div>